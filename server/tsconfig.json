{
  "compilerOptions": {
    "typeRoots": ["node_modules/@types"],
    "target": "ES6",                                                           
    "module": "commonjs",                                
    "moduleResolution": "node",                   
    "outDir": "./dist",                                   
    "forceConsistentCasingInFileNames": true,           
    "strict": true,                                     
    "skipLibCheck": true                                
  },
  "exclude": ["./node_modules"]
}
